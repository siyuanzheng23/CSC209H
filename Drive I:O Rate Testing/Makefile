CC=gcc

all: create_random_file get_histogram

create_random_file: create_random_file.c get_histogram.c
	$(CC) -Wall -o create_random_file create_random_file.c

get_histogram: get_histogram.c create_random_file.c
	$(CC) -Wall -o get_histogram get_histogram.c

clean:  #remove the executables and the default written files generated by the scripts  
	rm -r -f create_random_file get_histogram create_result.txt histogram.txt ./written_files ./another_written_files



